        <hr>
        <div class="row ml-3">
            {% for veganFood in veganFoods %}
            <div class="card ml-3" style="width: 18rem;">
                <a href="/food/{{ veganFood.id }}"><div class="picture-container"><img class="card-img-top" src="content/{{ veganFood.pictureName }}" alt="Bild von {{ veganFood.name }}"></div></a>
                <div class="card-body d-flex flex-column">
