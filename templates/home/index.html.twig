                    <p class="card-text mt-auto"><span class="fa fa-history"> {{ veganFood.duration|date('H:i') }} mins</span> <span class="fa fa-heart" style="color: red;">{{ veganFood.foodLike is not null ? veganFood.foodLike : "0" }}</span></p>
